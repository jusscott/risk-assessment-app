// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Report {
  id              Int       @id @default(autoincrement())
  userId          String    // Foreign key to user in Auth service
  analysisId      Int       // Reference to the analysis in Analysis service
  title           String
  name            String?   // Alternative name field for compatibility
  description     String?
  summary         String?   // Executive summary
  framework       String?   // Compliance framework (ISO 27001, SOC 2, etc.)
  score           Int?      // Overall score percentage
  criticalIssues  Int?      // Number of critical issues
  highIssues      Int?      // Number of high-priority issues
  mediumIssues    Int?      // Number of medium-priority issues
  recommendations String[]  @default([]) // Array of recommendations
  categories      Json?     // JSON field for category scores
  filePath        String
  fileName        String
  accessCode      String
  isPublic        Boolean   @default(false)
  expiresAt       DateTime?
  completedAt     DateTime? // When the report was completed
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  sections        Section[]
  status          String    @default("pending") // "pending", "processing", "completed", "failed"
}

model Section {
  id          Int      @id @default(autoincrement())
  reportId    Int
  report      Report   @relation(fields: [reportId], references: [id])
  title       String
  content     String?
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([reportId])
}

model ReportTemplate {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ReportShare {
  id         Int      @id @default(autoincrement())
  reportId   Int
  email      String
  accessCode String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([reportId])
  @@index([accessCode])
}
